@{
    ViewBag.Title = "Home Page";
}
<style>
    #menu {
        position: absolute;
        top: 100px;
        right: 20%;
    }
</style>
@if (User.Identity.IsAuthenticated)
{
    <body>
        <div id="menu">
            @User.Identity.Name
            @Html.ActionLink("Выйти", "LogOff", "Authentication")
        </div>
    </body>
}
else
{
    <body>
        <div id="menu">
            @Html.ActionLink("Зарегестрироваться", "Register", "Authentication")
            @Html.ActionLink("Войти", "Login", "Authentication")
        </div>
    </body>
}
